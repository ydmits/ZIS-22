<Window x:Class="KP_Mitsura.Win_Meaasge_Box"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KP_Mitsura"
        mc:Ignorable="d"
        Width="280" Height="150"
        MinWidth="280" MinHeight="150"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Внимание" Icon="/icon1.png" WindowStartupLocation="CenterScreen" WindowStyle="None" SizeToContent="Height">
    <Grid x:Name="mainRoot" Background="White">
        <Grid.RowDefinitions >
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" x:Name="Text1" Text="" TextWrapping="Wrap" Margin="5 5 5 5"/>
        <TextBlock Grid.Row="1" x:Name="Text2" Text="" TextWrapping="Wrap" Margin="5 5 5 5"/>
        <Button Grid.Row="2" x:Name="OKButton" Content="OK" Margin="5 5 15 15" HorizontalAlignment="Right" MinWidth="80" MaxWidth="120" Click="OKButton_Click" Cursor="Hand"/>
    </Grid>
</Window>

